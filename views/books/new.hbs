<div class="container"></div>
<div class="container">
  {{> subhead }}
  {{> subnav }}

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Add New Book</h2>
      <br>

      <form method="POST" action="/books/{{#if book.id }}{{ book.id }}?_method=PUT{{/if}}">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" value="{{ book.title }}" required autofocus>
        </div>
        <div class="form-group">
          <input type="text" name="genre" class="form-control" placeholder="Genre" value="{{ book.genre }}" required>
        </div>
        <div class="form-group">
          <input type="url" name="pic_url" class="form-control" placeholder="Cover Image URL" value="{{ book.pic_url }}" required>
        </div>
        <div class="form-group">
          <textarea class="form-control" name="description" rows="5" placeholder="Description" required>{{ book.description }}</textarea>
        </div>
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Add Book</button>
      </form>
    </div>
  </div>
</div>
