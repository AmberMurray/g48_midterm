<div class="container"></div>
<div class="container">
  {{> subhead}}
  {{> subnav}}

  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <img class="img-responsive book-image" src="{{ book.pic_url }}">
        </div>
        <div class="col-md-6">
          <h3>{{ book.title }}</h3>
          <h4>{{ book.genre }}</h4>
          <p>{{ book.description }}</p>
          <p><strong>Authors:</strong></p>
          <ol>
            {{#each author}}
            <li><a href="/authors/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></li>
            {{/each}}
          </ol>

          <div class="btn-group-sm" role="group">
            <a href="/books/{{ book.id }}/edit"
            class="btn btn-sm btn-success"
            type="submit"
            name="edit">Edit</a>

            <form method="POST" action="/books/{{ this.id }}?_method=DELETE">
              <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="delete"
              value="Delete">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
