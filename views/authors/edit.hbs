<div class="container"></div>
<div class="container">
  {{> subhead }}
  {{> subnav }}

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Edit {{ author.first_name}} {{author.last_name}}</h2>
      <br>
      <form method="POST" action="/authors/{{#if author.id }}{{ author.id }}?_method=PUT{{/if}}">
        <div class="form-group">
          <input type="text" name="first_name" class="form-control" placeholder="First Name" value="{{ author.first_name }}" required autofocus>
        </div>
        <div class="form-group">
          <input type="text" name="last_name" class="form-control" placeholder="Last Name" value="{{ author.last_name }}" required autofocus>
        </div>
        <div class="form-group">
          <input type="url" name="pic_url" class="form-control" placeholder="Sweet Image URL" value="{{ author.pic_url }}" required>
        </div>
        <div class="form-group">
          <textarea class="form-control" name="biography" rows="10" placeholder="Biography" required>{{ author.biography }}</textarea>
        </div>
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Add Changes</button>
      </form>
    </div>
  </div>
</div>
